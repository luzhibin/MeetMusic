<?xml version="1.0" encoding="utf-8"?>

<!--定义整个项目中所用到的所有尺寸-->
<resources>

    <!--声明项目中顶部导航栏的高度-->
    <dimen name="navBarHeight">55dp</dimen>

    <!--用marginSize来表示项目中所有的外边距-->
    <dimen name="marginSize">16dp</dimen>

    <!--定义导航栏标题字体的大小-->
    <dimen name="navBarTitleSize">25sp</dimen>

    <!--用户名输入框字体大小-->
    <dimen name="titleSize">18sp</dimen>

    <!--密码输入框字体大小-->
    <dimen name="infoSize">14sp</dimen>

    <!--登录界面中“用户名 密码”自定义控件的高度-->
    <dimen name="inputViewHeight">44dp</dimen>

    <!--登录按钮的高度-->
    <dimen name="btnHeight">44dp</dimen>

    <!--按钮弧度-->
    <dimen name="radius">5dp</dimen>

    <!--activity_me.xml 中item的高度 -->
    <dimen name="itemHeight">44dp</dimen>

    <!--main activity“推荐歌单”距离左侧View的距离-->
    <dimen name="marginTabSize">4dp</dimen>

    <!--专辑margin size-->
    <dimen name="albumMarginSize">4dp</dimen>

    <!--播放量小图标 的图片大小-->
    <dimen name="playNumImageSize">18dp</dimen>

    <!--“最热音乐”下列表的图片大小-->
    <dimen name="itemIconSize">56dp</dimen>

    <!--音乐播放图标的大小-->
    <dimen name="itemPlaySize">36dp</dimen>

    <!--光盘距离顶部的距离-->
    <dimen name="discTopSize">90dp</dimen>

    <!--CircleImageView的宽高-->
    <dimen name="playMusicIconSize">210dp</dimen>
</resources>